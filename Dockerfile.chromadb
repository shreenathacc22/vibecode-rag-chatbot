FROM chromadb/chroma:latest

# Expose port
EXPOSE 8000

# Set environment variables
ENV CHROMA_HOST_ADDR=0.0.0.0
ENV CHROMA_HOST_PORT=8000
ENV IS_PERSISTENT=TRUE
ENV ANONYMIZED_TELEMETRY=FALSE
ENV CHROMA_SERVER_CORS_ALLOW_ORIGINS='["*"]'

# ChromaDB official image already has the correct CMD
# No need to override it - let the image use its default startup command
